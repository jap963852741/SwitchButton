<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.switchbutton.MyButtonView
        android:id="@+id/mySwitcher"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:buttonBackgroundColor="#ffffff"
        app:leftTxtString="CNY"
        app:chooseTxtColor="#ffffff"
        app:unChooseTxtColor="#10B4DD"
        app:rightTxtString="USDT"
        app:TxtSize="6dp"
        app:strokeWidth = "10"
        app:strokeColor="#FF0000"
        app:buttonChooseColor="#10B4DD"
        app:buttonChooseTwoColor="#000000"
        app:buttonRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--    #19CECE-->
<!--    app:unchooseTxtSecondColor="#19CECE"-->

</androidx.constraintlayout.widget.ConstraintLayout>